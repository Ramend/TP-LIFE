<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E0DE"
    android:orientation="vertical">


    <Button
        android:text="已规划行程"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/yuan"
        android:orientation="horizontal"
        android:padding="10dp">
    </Button>


    <Button
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/yuan1"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="60dp"
        android:onClick="xiznengxingcheng"></Button>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/yuanquan"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:onClick="gerenzhongxin"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="个人中心"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true">
            />

            <TextView
                android:onClick="sousuo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="搜索"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/yuanquan"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:onClick="shezhi"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="设置"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>